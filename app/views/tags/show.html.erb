<div class="row">
      <section class="posts col-md-9" >
        <div class="miga-de-pan">
          <ol class="breadcrumb">
            <li><%= link_to 'Inicio', questions_path%></li>
            <li>Ver preguntas de <%= @tag.nombre %></li>
          </ol>
 </div>
<% if @tag.questions.count == 0 %>
      <%= image_tag "sincontenido.jpg", class:"img-thumbnail", alt:"Sin contenido" %>  
<% else %>


  <% @tag.questions.all.order("created_at desc").each do |pregunta| %>
        <article class="post clearfix">
          <a href="#" class="imagen thumb pull-left hidden-xs hidden-sm"><%= image_tag "perfil.jpg", class:"img-thumbnail", alt:"Foto de perfil" %>
          </a>
          <div class="encabezado">
            
            <h3 class="post-title"><a href="#"><%= pregunta.titulo %></a></h2>
            <p><span class="post-fecha"><%= pregunta.fecha %></span> por <span class="post-autor"><a href="#"> <%= pregunta.user.full_name %> </a></span></p>

          </div>
          <p><span class="post-contenido text-justify"><%= truncate(pregunta.cuerpo, length: 150) %></span></p> 
          <br>
          <h4> Etiquetas:</h4>
          <% pregunta.tags.each do |tag| %>
             <%= link_to tag.nombre , tag_path(:id => tag.id),class:"btn btn-default"%>
          <% end %>
          <h4>Facultad:</h4>
          <% if not pregunta.university.nil? %>
            <p><%= pregunta.university.nombre %></span></p>
          <% end %>
          <div class="contenedor-botones">
            <%= link_to 'Leer Mas', question_path(:id => pregunta.id),class:"btn btn-primary pull-right"%>
               
            <p  class="label label-success pull-right CantRespuestas">Respuestas <span class="badge"><%= pregunta.answer.count %></span></p> 
          </div> 

        </article>
  <% end %>

<% end %>