<div class="row">
      <section class="posts col-md-9" >
        <div class="miga-de-pan">
          <ol class="breadcrumb">
            <li><%= link_to 'Inicio', questions_path %></li>
            <li>Nueva pregunta</li>
          </ol>
</div>
<%= form_for @question do |f| %>
  <div class="form-group">
    <%= f.label :titulo %>
    <%= f.text_field :titulo, class: "form-control", placeholder: "Escriba la pregunta", required:true %>
  </div>
  <div class="form-group">
    <%= f.label :cuerpo, "Cuerpo de la pregunta" %><br>
    <%= f.text_area :cuerpo,class: "form-control", placeholder: "Escriba una descripcion de su pregunta", required:true ,rows:15 %>
  </div>
  <div class="checkbox">
    <p>Seleccione su etiqueta</p> 
    <%= f.collection_select :tag_ids, Tag.all, :id, :nombre, {}, { multiple: true,class:"form-control",required:true  }%>
 
  </div>
  <%= f.submit "Enviar Pregunta", class:"btn btn-default" %>
<% end %>

