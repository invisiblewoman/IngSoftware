<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <div class="col-sm-3">
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>
</div>
<br />
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %> <i>(Si no quiere cambiar la contraseña, deje el espacio en blanco)</i><br />
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "off" , class:"form-control"%>
    </div>
    <% if @minimum_password_length %>
     
      <em>minimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>


  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
    <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "off" , class:"form-control"%>
  </div>
</div>
<br />
  <div class="form-group">
    <%= f.label :nombre %><br />
    <div class="col-sm-3">
    <%= f.text_field :nombre, autofocus: true, class:"form-control" %>
  </div>
</div>
<br />
  <div class="form-group">
    <%= f.label :apellido %><br />
    <div class="col-sm-3">
    <%= f.text_field :apellido, autofocus: true, class:"form-control" %>
  </div>
</div>
<br />
  <div class="form-group">
    <%= f.label :descripcion %><br />
    <div class="col-sm-3">
    <%= f.text_field :descripcion, autofocus: true, class:"form-control" %>
  </div>
</div>
<br />
<div class="form-group">
    <%= f.label :foto %><br />
    <div class="col-sm-3">
    <%= f.text_field :foto, autofocus: true, class:"form-control" %>
  </div>
</div>
<br />
  <div class="form-group">
   <p><strong>Seleccione su Facultad</strong> </p>
<div class="col-sm-3">
    <%= f.collection_select(:university_id, University.all, :id, :nombre, {:prompt => false}, {class:"form-control"} )%>
</div>
  </div>

 <br /> 
  <br />
  <div class="form-group">
    <%= f.label :current_password, "Contraseña actual" %> <i>(Es necesario ingresar la contraseña actual para guardar los cambios)</i><br />
    <div class="col-sm-3">
    <%= f.password_field :current_password, autocomplete: "off" , class:"form-control"%>
  </div> 
  <br /> <br /> <br /> 
  <div class="actions">
    <%= f.submit "Guardar cambios",class:"btn btn-primary pull-left"  %>
  </div>
<% end %>

