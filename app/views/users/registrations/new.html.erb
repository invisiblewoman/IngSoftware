<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
  <div class="col-sm-3">
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>
  <br />
  </div>
  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a"%>
    <% if @minimum_password_length %>
    <em>(minimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", class:"form-control"  %>
    </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %><br />
    <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :nombre %><br />
    <div class="col-sm-3">
    <%= f.text_field :nombre, autofocus: true , class:"form-control"%>
  </div>
  </div>
  <br />
  <div class="form-group">
    <%= f.label :apellido %><br />
    <div class="col-sm-3">
    <%= f.text_field :apellido, autofocus: true , class:"form-control"%>
  </div>
  </div>
  <br/>
  <br/>
  <div >
    <%= f.submit "Registrarse", class:"btn btn-primary pull-left" %>
  </div>
<% end %>

